<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryDark">#1565C0</item>
        <item name="colorAccent">#E91E63</item>
    </style>

    <style name="AppTheme.WithoutActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>
    <style name="Theme.DesignDemo" parent="Base.Theme.DesignDemo">
    </style>

    <style name="Base.Theme.DesignDemo" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#0fb73d</item>
        <item name="colorPrimaryDark">#0ba823</item>
        <item name="colorAccent">#FF4081</item>
        <item name="android:windowBackground">@color/abc_primary_text_material_dark</item>
    </style>

    <style name="PopupWindowButton">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@drawable/select_button_background</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.MyTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!--colorAccent preference 中的主体颜色将由此决定
        -->
        <item name="colorAccent">@color/accent</item>
        <item name="drawerArrowStyle">@style/Theme.MyTheme.DrawerArrowStyle</item>
        <item name="toolbarStyle">@style/Theme.MyTheme.Toolbar</item>
        <item name="dialogTheme">@style/Theme.MyTheme.Dialog</item>
        <item name="alertDialogTheme">@style/Theme.MyTheme.Dialog.Alert</item>
        <!-- No-selector-background bugfix -->
        <item name="android:activatedBackgroundIndicator">?android:attr/selectableItemBackground</item>
    </style>
    <style name="Theme.MyTheme.DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="Theme.MyTheme.Toolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="color">@android:color/white</item>
        <item name="titleTextAppearance">@style/Theme.MyTheme.Toolbar.TextAppearance</item>
        <item name="subtitleTextAppearance">@style/Theme.MyTheme.Toolbar.TextAppearance.Subtitle
        </item>

    </style>

    <style name="Theme.MyTheme.Toolbar.TextAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Theme.MyTheme.Toolbar.TextAppearance.Subtitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Theme.MyTheme.Dialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="Theme.MyTheme.Dialog.Alert" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/accent</item>
    </style>

</resources>
